{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@efficio/ui": ["packages/ui/src"],
      "@efficio/ui/*": ["packages/ui/src/*"],
      "@efficio/theme": ["packages/theme/src"],
      "@efficio/theme/*": ["packages/theme/src/*"]
    }
  },
  "include": ["apps", "packages", "tailwind.config.js"],
  "exclude": ["dist", "node_modules"]
}

